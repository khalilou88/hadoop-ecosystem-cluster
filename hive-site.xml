<?xml version="1.0"?>
<configuration>
    <!-- Metastore connection -->
    <property>
        <name>hive.metastore.uris</name>
        <value>thrift://hive-metastore:9083</value>
        <description>Thrift URI for the remote metastore</description>
    </property>

    <!-- Disable local metastore -->
    <property>
        <name>hive.metastore.local</name>
        <value>false</value>
        <description>Use remote metastore</description>
    </property>

    <!-- Warehouse directory (should match your HDFS setup) -->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>/user/hive/warehouse</value>
        <description>Hive warehouse directory</description>
    </property>

    <!-- Schema verification -->
    <property>
        <name>hive.metastore.schema.verification</name>
        <value>false</value>
        <description>Disable schema verification for client</description>
    </property>
</configuration>